#include <iostream>
#include <fstream>
#include <iomanip>
using namespace std;
int main ( )
{
// Declaration and initialization
const int CAPACITY = 10;
int frequencies [CAPACITY] = {0};
ifstream integerFile;
// Openning integer file
integerFile.open ("integerFile.dat");
if (!integerFile)
{
  cout<<"error. integer file cannot be opened"<<endl;
  cout << "the program is terminated";
  return 0;
  }
  int data;
  int size = 0;
  while(integerFile >> data)
    {
      if(data >= 0 && data <= 9){
        size++;
        frequencies[data]++;
      }
    }
  integerFile.close();
  cout << "there are "<< size << "valid data iteams"<< endl;
  }
